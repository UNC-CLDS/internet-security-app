<?xml version='1.0' encoding='utf-8'?>
<widget id="io.internetsecurityapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Internet Security App</name>
    <description>
        Main application for games
    </description>
    <author email="piccot@live.unc.edu" href="http://cordova.io">
       Daniel Piccot and Matt Hill
    </author>
    <content src="main.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="DisallowOverscroll" value="true" />
		<preference name="KeepRunning" value="false"/>
		<preference name="SetFullscreen" value="True"/>
    </platform>
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
        <preference name="Orientation" value="all"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
